FROM alpine:3.20
#############################################################################
# Installing Base Dependencies
#############################################################################
# Update Repo
RUN apk update &&  \
    apk add --no-cache openssl nodejs npm bash nano iputils-ping tzdata openssh-server &&  \
    npm install -g yarn &&  \
    rm -rf /var/cache/apk/* &&  \
    apk cache clean
#############################################################################
# End Base Dependencies
#############################################################################
#----------------------------------------------------------------------------
#############################################################################
# Adding Config
#############################################################################
WORKDIR /home/app
#############################################################################
# End Adding Config
#############################################################################
#----------------------------------------------------------------------------
# Copy SSH Config
COPY .config/ssh /etc/ssh
# Create SSHD Run
RUN mkdir -p /run/sshd
#############################################################################
# Adding ENV Script
#############################################################################
ENV TZ=Asia/Makassar
#############################################################################
# End ENV Script
#############################################################################
#----------------------------------------------------------------------------
#############################################################################
# Set Entrypoint Script
#############################################################################
COPY .config/entrypoint.sh /usr/local/bin/entrypoint.sh
RUN chmod +x /usr/local/bin/entrypoint.sh
#############################################################################
# End Entrypoint Script
#############################################################################
#----------------------------------------------------------------------------
# Clean up
RUN rm -rf src .config
#----------------------------------------------------------------------------
EXPOSE 22 80 443
#----------------------------------------------------------------------------
# Adding Entrypoint
ENTRYPOINT ["/usr/local/bin/entrypoint.sh"]
#----------------------------------------------------------------------------
# Run Default CMD
CMD ["yarn", "start"]
#----------------------------------------------------------------------------
