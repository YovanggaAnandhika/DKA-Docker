FROM debian:12-slim
# Maintainer
LABEL maintainer="Yovangga Anandhika <dka.tech.dev@gmail.com>"
#############################################################################
# Installing Base Dependencies
#############################################################################
# Update Repo
RUN apt update && apt install -y  --no-install-recommends bash nano iputils-ping tzdata curl procps cron logrotate \
    && curl -fsSL https://deb.nodesource.com/setup_current.x | bash - && apt-get install -y nodejs \
    && apt-get install -y --no-install-recommends openssl iputils-ping certbot python3-certbot-dns-cloudflare \
    && npm install -g yarn \
    && apt install -y --no-install-recommends libcairo2-dev libpoppler-qt5-dev \
    && rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*
#############################################################################
# End Base Dependencies
#############################################################################
#----------------------------------------------------------------------------
#############################################################################
# Adding Config
#############################################################################
WORKDIR /home/app
#############################################################################
# End Adding Config
#############################################################################
RUN chown -R www-data:www-data /home/app && chmod -R 775 /home/app
#############################################################################
# Adding ENV Script
#############################################################################
ENV TZ=Asia/Makassar
#############################################################################
# End ENV Script
#############################################################################
#----------------------------------------------------------------------------
#############################################################################
# Set Entrypoint Script
#############################################################################
COPY .config/entrypoint.sh /usr/local/bin/entrypoint.sh
RUN chmod +x /usr/local/bin/*
#############################################################################
# End Entrypoint Script
#############################################################################
#----------------------------------------------------------------------------
EXPOSE 80
#----------------------------------------------------------------------------
# Adding Entrypoint
ENTRYPOINT ["/usr/local/bin/entrypoint.sh"]
#----------------------------------------------------------------------------
# Run Default CMD

#----------------------------------------------------------------------------
